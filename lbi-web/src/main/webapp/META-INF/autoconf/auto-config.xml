<?xml version="1.0" encoding="UTF-8"?>
<config description="autoconf">
	<group name="env">
		<property name="prop.env"
				  defaultValue="local"
				  description="配置参数环境 local:测试环境，daily:日常环境，online:线上环境" />
		<property name="log.home"
				  defaultValue="D:/dev/logs"
				  description="日志路径" />
	</group>
	<group name="tile">
		<property name="gujiao.file" description="gujiao.file" />
		<property name="world.file" description="world.file" />
	</group>
	<group name="jdbc">
		<property name="jdbc.url"
				  defaultValue="jdbc:postgresql://127.0.0.1:5432/postgres?reWriteBatchedInserts=true"
				  description="url" />
		<property name="jdbc.username"
				  defaultValue="postgres"
				  description="username" />
		<property name="jdbc.password"
				  defaultValue="postgres"
				  description="password" />
	</group>
	<script>
		<generate template="WEB-INF/spring-servlet.xml" charset="utf-8" />
		<generate template="application.properties.vm" destfile="../lbi-web/WEB-INF/classes/application.properties" charset="utf-8" />
		<generate template="logback.xml.vm" destfile="../lbi-web/WEB-INF/classes/logback.xml" charset="UTF-8"/>
	</script>
</config>